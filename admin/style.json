{
    "QCustomSlideMenu": [
        {
            "name": "menu",
            "floatPosition": [
                {
                    "relativeTo": "centralwidget",
                    "position": "left",
                    "shadow": [{
                        "color": "#000",
                        "blurRadius": 10,
                        "xOffset": 0,
                        "yOffset": 0
                    }]
                }
            ],
            "defaultSize": [{
			    "width": 200,
			    "height": "parent"
		    }],
		    "collapsedSize": [{
			    "width": 0,
			    "height": "parent"
		    }],
		    "expandedSize": [{
			    "width": 200,
			    "height": "parent"
		    }],
            "toggleButton": [{
			    "buttonName": "btn_toggle"
		    }],
            "menuTransitionAnimation": [{
			    "whenCollapsing": [{
				    "animationDuration": 500,
				    "animationEasingCurve": "Linear"
			    }],
			    "whenExpanding": [{
				    "animationDuration": 500,
				    "animationEasingCurve": "Linear"
			    }]
		    }],
			"menuContainerStyle": [{
				"whenMenuIsCollapsed": [
					"border: 2px solid transparent"
				],
				"whenMenuIsExpanded": [
					"background-color: #669999"
				]
			}]
        },
		{
            "name": "tutorial",
            "floatPosition": [
                {
                    "relativeTo": "centralwidget",
                    "position": "right",
                    "shadow": [{
                        "color": "#000",
                        "blurRadius": 10,
                        "xOffset": 0,
                        "yOffset": 0
                    }]
                }
            ],
            "defaultSize": [{
			    "width": 0,
			    "height": "parent"
		    }],
		    "collapsedSize": [{
			    "width": 0,
			    "height": "parent"
		    }],
		    "expandedSize": [{
			    "width": 200,
			    "height": "parent"
		    }],
            "toggleButton": [{
			    "buttonName": "btn_toggle"
		    }],
            "menuTransitionAnimation": [{
			    "whenCollapsing": [{
				    "animationDuration": 500,
				    "animationEasingCurve": "Linear"
			    }],
			    "whenExpanding": [{
				    "animationDuration": 500,
				    "animationEasingCurve": "Linear"
			    }]
		    }],
			"menuContainerStyle": [{
				"whenMenuIsCollapsed": [
					"border: 2px solid transparent"
				],
				"whenMenuIsExpanded": [
					"background-color: #669999"
				]
			}]
        }
    ]
}
